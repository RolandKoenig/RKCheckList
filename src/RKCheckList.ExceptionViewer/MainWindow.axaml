<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="600" Height="400"
        x:Class="RKCheckList.ExceptionViewer.MainWindow"
        Title="Unhandled Error">
    <DockPanel LastChildFill="True">
        <Panel DockPanel.Dock="Bottom" Height="45">
            <Button Width="200" Content="Close"
                    Margin="4" 
                    HorizontalAlignment="Right"
                    Click="OnCmdOK_Click"></Button>
        </Panel>
        
        <Grid Margin="5"
              ColumnDefinitions="200,*">
            <TextBox Grid.Column="1" 
                     x:Name="CtrlErrorDetails" 
                     IsReadOnly="True" />
            <!-- <StackPanel Grid.Column="1"
                        Orientation="Vertical">
                <TextBlock Classes="H1">Unhandled error</TextBlock>
                <TextBox x:Name="CtrlErrorDetails"
                         MaxLines="30" />
            </StackPanel> -->
        </Grid>
    </DockPanel>
</Window>
